# =====================================================
# CONFIGURATION PRODUCTION - Insider Trends Backend
# =====================================================

# ===== DATABASE =====
# PostgreSQL pour production (Railway, Supabase, etc.)
DATABASE_URL=postgresql+psycopg2://user:password@host:port/database

# SQLite pour d√©veloppement local
# DATABASE_URL=sqlite:///./test.db

# ===== JWT AUTHENTICATION =====
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== OAUTH STATE SECURITY =====
OAUTH_STATE_SECRET=your-oauth-state-secret-here

# ===== WEBHOOK =====
WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# ===== INSTAGRAM BUSINESS API =====
IG_APP_ID=your-instagram-app-id
IG_APP_SECRET=your-instagram-app-secret
IG_ACCESS_TOKEN=your-instagram-access-token
IG_USER_ID=your-instagram-user-id
IG_REDIRECT_URI=https://www.insidr.dev/api/v1/auth/instagram/callback

# ===== FACEBOOK API =====
FB_APP_ID=your-facebook-app-id
FB_APP_SECRET=your-facebook-app-secret
FB_REDIRECT_URI=https://www.insidr.dev/api/v1/auth/facebook/callback

# ===== GOOGLE OAUTH =====
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback
GOOGLE_REDIRECT_URI_PROD=https://www.insidr.dev/api/v1/auth/google/callback

# ===== REDIS (Rate Limiting) =====
REDIS_URL=redis://localhost:6379/0
# Pour Railway/Production: rediss://default:password@host:port

# ===== ENVIRONMENT =====
ENVIRONMENT=production
# Pour dev local: ENVIRONMENT=development

# ===== MEILISEARCH (Optionnel) =====
MEILI_HOST=http://localhost:7700
MEILI_INDEX=posts
MEILI_MASTER_KEY=your-meilisearch-key
